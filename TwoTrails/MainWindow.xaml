<Window x:Class="TwoTrails.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoTrails"
        xmlns:cvt="clr-namespace:TwoTrails.Converters"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="1000" Height="840"
        MinWidth="640" MinHeight="480"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <cvt:NullOrBoolConverter x:Key="NullOrBool"/>



        <Style x:Key="styleMiDisableNullCommand" TargetType="{x:Type MenuItem}">
            <Style.Triggers>
                <Trigger Property="Command" Value="{x:Null}">
                    <Setter Property="IsEnabled" Value="False" />
                </Trigger>
            </Style.Triggers>
        </Style>


        <Style x:Key="styleMiHasChanges" TargetType="MenuItem" BasedOn="{StaticResource styleMiDisableNullCommand}">
            <Setter Property="IsEnabled">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource NullOrBool}">
                        <Binding Path="CurrentProject"/>
                        <Binding Path="CurrentProject.RequiresSave"/>
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="styleMiMultipleSelections" TargetType="MenuItem" BasedOn="{StaticResource styleMiDisableNullCommand}">
            <Setter Property="IsEnabled">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource NullOrBool}">
                        <Binding Path="CurrentEditor"/>
                        <Binding Path="CurrentEditor.MultipleSelections"/>
                        <Binding Path="CurrentTab.IsPointsEditable"/>
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="styleMiHasSelection" TargetType="MenuItem" BasedOn="{StaticResource styleMiDisableNullCommand}">
            <Setter Property="IsEnabled">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource NullOrBool}">
                        <Binding Path="CurrentEditor"/>
                        <Binding Path="CurrentEditor.HasSelection"/>
                        <Binding Path="CurrentTab.IsPointsEditable"/>
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Command="{Binding UndoCommand}" Key="Z" Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding RedoCommand}" Key="Z" Modifiers="Ctrl+Shift"/>
        <KeyBinding Command="{Binding OpenCommand}" Key="O" Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding SaveCommand}" Key="S" Modifiers="Ctrl"/>
    </Window.InputBindings>
    
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top" Height="25" Background="Gray">
            <MenuItem Header="_File">
                <MenuItem Header="New" Command="{Binding NewCommand}"/>
                <MenuItem Header="Open" Command="{Binding OpenCommand}" InputGestureText="Ctrl+O"/>
                
                <Separator/>
                
                <MenuItem Header="Save" Command="{Binding SaveCommand}" CommandParameter="{Binding CurrentProject}" IsEnabled="{Binding Path=CanSaveCurrentProject}" InputGestureText="Ctrl+S"/>
                
                <Separator/>
                
                <MenuItem Header="Close Project" Command="{Binding CloseProjectCommand}" CommandParameter="{Binding CurrentProject}" IsEnabled="{Binding Path=HasOpenedProject}"/>
                <MenuItem Header="Recent Projects" Name="miRecent" IsEnabled="{Binding Path=RecentItemsAvail}" />
                
                <Separator/>
                
                <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            
            <MenuItem Header="_Edit">
                <MenuItem Header="Undo" Command="{Binding CurrentProject.UndoCommand}" InputGestureText="Ctrl+Z">
                    <MenuItem.IsEnabled>
                        <MultiBinding Converter="{StaticResource NullOrBool}">
                            <Binding Path="CurrentProject"/>
                            <Binding Path="CurrentProject.HistoryManager.CanUndo"/>
                            <Binding Path="CurrentTab.IsPointsEditable"/>
                        </MultiBinding>
                    </MenuItem.IsEnabled>
                </MenuItem>
                <MenuItem Header="Redo" Command="{Binding CurrentProject.RedoCommand}" InputGestureText="Ctrl+Shift+Z">
                    <MenuItem.IsEnabled>
                        <MultiBinding Converter="{StaticResource NullOrBool}">
                            <Binding Path="CurrentProject"/>
                            <Binding Path="CurrentProject.HistoryManager.CanRedo"/>
                            <Binding Path="CurrentTab.IsPointsEditable"/>
                        </MultiBinding>
                    </MenuItem.IsEnabled>
                </MenuItem>
                
                <Separator/>
                
                <MenuItem Header="Rename Points" Command="{Binding CurrentEditor.RenamePointsCommand}"
                          Style="{StaticResource ResourceKey=styleMiMultipleSelections}"/>
                <MenuItem Header="Reverse Points" Command="{Binding CurrentEditor.ReverseSelectedCommand}"
                          Style="{StaticResource ResourceKey=styleMiMultipleSelections}"/>
                
                <Separator/>

                <MenuItem Header="Reset Point" Command="{Binding CurrentEditor.ResetPointCommand}" InputGestureText="Ctrl+R"
                          Style="{StaticResource ResourceKey=styleMiHasSelection}"/>
                <MenuItem Header="Discard Changes" Command="{Binding Project.DiscardChangesCommand}"
                          Style="{StaticResource ResourceKey=styleMiHasChanges}"/>

                <Separator/>

                <MenuItem Header="Delete" Command="{Binding CurrentEditor.DeleteCommand}" InputGestureText="Del"
                          Style="{StaticResource styleMiHasSelection}"/>
            </MenuItem>
            
            <MenuItem Header="_Data">
                <MenuItem Header="Modify Project" Command="{Binding EditProjectCommand}" IsEnabled="{Binding HasOpenedProject}"/>
                <MenuItem Header="Modify Polygons" Command="{Binding EditPolygonsCommand}" IsEnabled="{Binding HasOpenedProject}"/>
                <MenuItem Header="Modify Groups" Command="{Binding EditGroupsCommand}" IsEnabled="{Binding HasOpenedProject}"/>
                <MenuItem Header="Modify Metadata" Command="{Binding EditMetadataCommand}" IsEnabled="{Binding HasOpenedProject}"/>

                <Separator/>

                <MenuItem Header="Import Data" Command="{Binding ImportCommand}" IsEnabled="{Binding HasOpenedProject}"/>
                <MenuItem Header="Export Project" Command="{Binding ExportCommand}" IsEnabled="{Binding HasOpenedProject}"/>

                <Separator/>

                <MenuItem Header="Create Polygon" Command="{Binding CurrentEditor.CreatePolygonCommand}" IsEnabled="{Binding HasOpenedProject}"/>
                <MenuItem Header="Create Group" Command="{Binding CurrentEditor.CreateGroupCommand}" IsEnabled="{Binding HasOpenedProject}"/>
            </MenuItem>
            
            <MenuItem Header="_Tools">
                <MenuItem Header="Create Quondams" Command="{Binding CurrentEditor.CreateQuondamsCommand}"
                        Style="{StaticResource ResourceKey=styleMiHasSelection}"/>
                <MenuItem Header="Move Points" Command="{Binding CurrentEditor.MovePointsCommand}"
                        Style="{StaticResource ResourceKey=styleMiHasSelection}"/>
                <MenuItem Header="Retrace Points" Command="{Binding CurrentEditor.RetraceCommand}"
                        Style="{StaticResource ResourceKey=styleMiDisableNullCommand}"/>

                <Separator/>

                <MenuItem Header="Create Plots" Command="{Binding CurrentEditor.CreatePlotsCommand}" IsEnabled="{Binding HasOpenedProject}"/>
                <MenuItem Header="Create Corridor" Command="{Binding CurrentEditor.CreateCorridorCommand}">
                    <MenuItem.IsEnabled>
                        <MultiBinding Converter="{StaticResource NullOrBool}">
                            <Binding Path="CurrentEditor"/>
                            <Binding Path="CurrentEditor.HasPossibleCorridor"/>
                        </MultiBinding>
                    </MenuItem.IsEnabled>
                </MenuItem>

                <Separator/>

                <MenuItem Header="Settings" Command="{Binding SettingsCommand}"/>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="View Error Log" Command="{Binding ViewLogCommand}"/>
                <MenuItem Header="View User Activity" Command="{Binding ViewUserActivityCommand}"
                          Visibility="{Binding Settings.IsAdvancedMode, Converter={StaticResource ResourceKey=BoolToVis}}"/>

                <Separator/>

                <MenuItem Header="About TwoTrails" Command="{Binding AboutCommand}"/>
            </MenuItem>
        </Menu>
        <ToolBarPanel Background="Gray" Height="25" VerticalAlignment="Top" Width="Auto" DockPanel.Dock="Top">
            
        </ToolBarPanel>
        <StatusBar Height="25" VerticalAlignment="Bottom" DockPanel.Dock="Bottom"/>

        <Grid DockPanel.Dock="Top">
            <DockPanel LastChildFill="True" Background="Gray">
                <TabControl x:Name="tabControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Margin="0" Padding="0" Drop="tabControl_Drop" AllowDrop="True">

                    <TabControl.Resources>
                        <Style TargetType="{x:Type TabItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TabItem}">
                                        <Grid Name="Grid" VerticalAlignment="Bottom" Background="Gray" Margin="-3, 0, 2, 0" HorizontalAlignment="Stretch">
                                            <Border>
                                                <DockPanel Margin="2">
                                                    <TextBlock x:Name="ContentSite" Text="{Binding TabTitle}" DockPanel.Dock="Left"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,2,8,2"/>

                                                    <Button Name="btnCloseProject" Visibility="Hidden" DockPanel.Dock="Right" HorizontalAlignment="Right"
                                                            BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                            Command="{Binding CloseTabCommand}" CommandParameter="{Binding CurrentTab}">
                                                        <TextBlock Name="lblClose" Foreground="White" Padding="0" Margin="0" Width="15" Height="15"
                                                                   HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Text="X">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="Background" Value="LimeGreen" />
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Button>
                                                    
                                                    <Button Name="btnOpenInWindow" Visibility="Collapsed" DockPanel.Dock="Right" HorizontalAlignment="Right"
                                                            BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                                                        <Image Source="{StaticResource ImgOpenInNew}" Width="15" Height="15" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                                                    </Button>
                                                </DockPanel>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Grid" Property="Background" Value="Green"/>
                                            </Trigger>

                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="btnCloseProject" Property="Visibility" Value="Visible"/>
                                            </Trigger>

                                            <DataTrigger Binding="{Binding IsDetachable}" Value="True">
                                                <Setter TargetName="btnOpenInWindow" Property="Visibility" Value="Visible"/>
                                            </DataTrigger>

                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsSelected" Value="False" />
                                                    <Condition Property="IsMouseOver" Value="True" />
                                                </MultiTrigger.Conditions>

                                                <MultiTrigger.Setters>
                                                    <Setter TargetName="Grid" Property="Background" Value="ForestGreen"/>
                                                </MultiTrigger.Setters>
                                            </MultiTrigger>

                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsSelected" Value="True" />
                                                    <Condition Property="IsMouseOver" Value="False" />
                                                </MultiTrigger.Conditions>

                                                <MultiTrigger.Setters>
                                                    <Setter TargetName="btnCloseProject" Property="Visibility" Value="Visible"/>
                                                </MultiTrigger.Setters>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                        
                                        
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <Grid Margin="0">
                                            <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>

                            <Setter Property="Height" Value="25" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="FontFamily" Value="DokChampa" />
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </TabControl.Resources>
                </TabControl>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
