                                <TextBlock Grid.Column="0" Grid.Row="8" Text="Slope" />
                                <ComboBox Grid.Column="0" Grid.Row="9"
                                          SelectedItem="{Binding MetadataSlope, UpdateSourceTrigger=PropertyChanged}"
