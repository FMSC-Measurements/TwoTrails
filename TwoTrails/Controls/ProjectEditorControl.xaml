                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="2.5"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Left"/>
                                </Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Margin" Value="2.5"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Left"/>
                                </Style>
                            </Grid.Resources>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.ColumnSpan="6" Source="{Binding ElementName=lstMedia, Path=SelectedItem.Image}" />

                            <Image Grid.Column="5" Source="{StaticResource ImgCloseBlack}" Stretch="Fill" Height="35" Width="35" VerticalAlignment="Top" HorizontalAlignment="Right">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseDown">
                                        <i:InvokeCommandAction Command="{Binding HideMediaViewerCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Image>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Azimuth:" />
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ElementName=lstMedia, Path=SelectedItem.ImageInfo.Azimuth}" IsReadOnly="True" />

                            <TextBlock Grid.Row="1" Grid.Column="2" Text="Pitch:" />
                            <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding ElementName=lstMedia, Path=SelectedItem.ImageInfo.Pitch}" IsReadOnly="True" />

                            <TextBlock Grid.Row="1" Grid.Column="4" Text="Roll:" />
                            <TextBox Grid.Row="1" Grid.Column="5" Text="{Binding ElementName=lstMedia, Path=SelectedItem.ImageInfo.Roll}" IsReadOnly="True" />


                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Time Created:" />
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ElementName=lstMedia, Path=SelectedItem.ImageInfo.TimeCreated}" />

                            <TextBlock Grid.Row="2" Grid.Column="2" Text="Is External File:" />
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding ElementName=lstMedia, Path=SelectedItem.ImageInfo.IsExternal}" />

                            <TextBlock Grid.Row="2" Grid.Column="4" Text="Path:" />
                            <TextBlock Grid.Row="2" Grid.Column="5" Text="{Binding ElementName=lstMedia, Path=SelectedItem.ImageInfo.FilePath}" TextTrimming="WordEllipsis" />

                            <TextBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="6" MinLines="2" IsReadOnly="True"
                                     Text="{Binding ElementName=lstMedia, Path=SelectedItem.ImageInfo.Comment}"
                                     AcceptsReturn="True" TextWrapping="Wrap"/>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

