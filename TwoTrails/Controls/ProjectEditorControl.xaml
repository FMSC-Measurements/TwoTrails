                                 CommandParameter="{Binding ElementName=lbPolys}" />
                            <Button Grid.Column="3" Content="Create" Command="{Binding CreatePolygonCommand}" CommandParameter="{Binding ElementName=lbPolys}" />
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <TabItem Name="tiMetadata" Header="Metadata">
