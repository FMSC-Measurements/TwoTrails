<UserControl x:Class="TwoTrails.Controls.ProjectEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwoTrails.Controls"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:cvt="clr-namespace:TwoTrails.Converters"
             xmlns:tt="clr-namespace:TwoTrails"
             xmlns:ttc="clr-namespace:TwoTrails.Core;assembly=TwoTrails.DAL"
             xmlns:fmsc="clr-namespace:FMSC.Core;assembly=FMSC.Core"
             xmlns:fmsccm="clr-namespace:FMSC.Core.Windows.ComponentModel;assembly=FMSC.Core.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{StaticResource scbBackground}"
             PreviewKeyDown="CommandInterceptor">

    <UserControl.InputBindings>
        <KeyBinding Command="{Binding UndoCommand}" Key="Z" Modifiers="Ctrl"/>
        <KeyBinding Command="{Binding RedoCommand}" Key="Z" Modifiers="Ctrl+Shift"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <cvt:M2Converter x:Key="M2Converter"/>
        <cvt:MetersToFeetConverter x:Key="MtoFConverter"/>
        <fmsccm:EnumDescriptionConverter x:Key="enumDesc"/>

        <DataTemplate DataType="{x:Type tt:ImageTile}">
            <Grid Width="250">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDown">
                            <i:InvokeCommandAction Command="{Binding OnClickCommand}"
                             CommandParameter="{Binding ElementName=imgImage, Path=DataContext}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="False">
                                    <Setter Property="Width" Value="240"/>
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="Opacity" Value=".9"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Width" Value="250"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="Opacity" Value="1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Image Name="imgImage" Source="{Binding Path=Image}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Grid VerticalAlignment="Bottom">
                        <Grid.Background>
                            <SolidColorBrush Color="Black" Opacity="0.75" />
                        </Grid.Background>
                        <TextBlock Text="{Binding Path=ImageInfo.Name}" HorizontalAlignment="Stretch" TextAlignment="Center"
                           Foreground="White" Margin="5, 0, 0, 2" TextTrimming="CharacterEllipsis"
                               Width="{Binding ActualWidth, ElementName=imgImage}"/>

                    </Grid>
                </Grid>
            </Grid>
        </DataTemplate>



        <Style x:Key="styleTabButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>

        <Style x:Key="styleTabButtonBorderStyle" TargetType="Border">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource scbPrimary}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource scbBackground}">

        <TabControl x:Name="tabControl"
                    Grid.Row="1"
                    Margin="-4,-2,0,0"
                    Padding="0,2,0,0"
                    TabStripPlacement="Left"
                    BorderThickness="0"
                    Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Grid Name="ControlContainer" HorizontalAlignment="Right">
                                    <Grid.LayoutTransform>
                                        <RotateTransform Angle="90"/>
                                    </Grid.LayoutTransform>

                                    <ContentPresenter TextElement.Foreground="White" x:Name="ContentSite" ContentSource="Header" HorizontalAlignment="Right" Margin="8,2,8,6"/>
                                </Grid>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="ControlContainer" Property="Background" Value="{StaticResource scbPrimaryDark}"/>
                                    </Trigger>

                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="IsSelected" Value="False" />
                                            <Condition Property="IsMouseOver" Value="True" />
                                        </MultiTrigger.Conditions>

                                        <MultiTrigger.Setters>
                                            <Setter TargetName="ControlContainer" Property="Background" Value="{StaticResource scbPrimary}"/>
                                        </MultiTrigger.Setters>
                                    </MultiTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <!--<Setter Property="HeaderTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel.LayoutTransform>
                                        <RotateTransform Angle="90" />
                                    </StackPanel.LayoutTransform>

                                    <TextBlock Text="{TemplateBinding Content}" Foreground="White" Margin="8, 4, 0, 4"/>
                                </StackPanel>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>-->
                </Style>
            </TabControl.Resources>

            <TabItem Name="tiProject" Header="Project">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16*"/>
                        <RowDefinition Height="47*"/>
                        <RowDefinition Height="87*"/>
                    </Grid.RowDefinitions>
                    <Border BorderBrush="{StaticResource scbPrimaryDark}" BorderThickness="4,0,0,0" Grid.RowSpan="3" Margin="0,0,-0.2,0">
                        <Grid Grid.Column="1" Grid.Row="0" Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="FontSize" Value="20"/>
                                </Style>

                                <Style TargetType="GroupBox">
                                    <Setter Property="FontSize" Value="20"/>
                                    <Setter Property="Margin" Value="5,0,5,5"/>
                                </Style>

                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="20"/>
                                </Style>

                            </Grid.Resources>

                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Project" />
                            <TextBox Grid.Column="0" Grid.Row="1" Text="{Binding ProjectInfo.Name, UpdateSourceTrigger=PropertyChanged}"
                                     PreviewTextInput="TextHasRestrictedCharacters"/>

                            <TextBlock Grid.Column="0" Grid.Row="2" Text="Region" />
                            <TextBox Grid.Column="0" Grid.Row="3"
                                 Text="{Binding ProjectInfo.Region, UpdateSourceTrigger=PropertyChanged}"
                                 PreviewTextInput="TextHasRestrictedCharacters"/>

                            <TextBlock Grid.Column="0" Grid.Row="4" Text="Forest" />
                            <TextBox Grid.Column="0" Grid.Row="5"
                                 Text="{Binding ProjectInfo.Forest, UpdateSourceTrigger=PropertyChanged}"
                                 PreviewTextInput="TextHasRestrictedCharacters"/>

                            <TextBlock Grid.Column="0" Grid.Row="6" Text="District" />
                            <TextBox Grid.Column="0" Grid.Row="7"
                                 Text="{Binding ProjectInfo.District, UpdateSourceTrigger=PropertyChanged}"
                                 PreviewTextInput="TextHasRestrictedCharacters"/>

                            <TextBlock Grid.Column="0" Grid.Row="8" Text="Description" />
                            <TextBox Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="3" MinLines="5" MaxLines="5"
                                Text="{Binding ProjectInfo.Description, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap"
                                AcceptsReturn="True" />


                            <GroupBox Header="Data" Grid.Column="2" Grid.RowSpan="9">
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Points" />
                                    <TextBlock Grid.Column="2" Grid.Row="0" Text="{Binding Manager.Points.Count}" TextAlignment="Right" />

                                    <TextBlock Grid.Column="0" Grid.Row="1" Text="Polygons" />
                                    <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding Manager.Polygons.Count}" TextAlignment="Right" />

                                    <TextBlock Grid.Column="0" Grid.Row="2" Text="Metadata" />
                                    <TextBlock Grid.Column="2" Grid.Row="2" Text="{Binding Manager.Metadata.Count}" TextAlignment="Right" />

                                    <TextBlock Grid.Column="0" Grid.Row="3" Text="Groups" />
                                    <TextBlock Grid.Column="2" Grid.Row="3" Text="{Binding Manager.Groups.Count}" TextAlignment="Right" />

                                    <TextBlock Grid.Column="0" Grid.Row="5" Text="DAL Version" />
                                    <TextBlock Grid.Column="2" Grid.Row="5" Text="{Binding Project.ProjectInfo.DbVersion}" TextAlignment="Right" />

                                    <TextBlock Grid.Column="0" Grid.Row="6" Text="Date Created" />
                                    <TextBlock Grid.Column="2" Grid.Row="6" Text="{Binding Project.ProjectInfo.CreationDate, StringFormat='M/d/yyyy h:mm tt (G\\MT zzz)'}" TextAlignment="Right" />


                                    <!--<TextBlock Grid.Column="0" Grid.Row="5" Text="Total Area (Ha)" />
                                    <TextBlock Grid.Column="2" Grid.Row="5" Text="{Binding TotalPolygonArea, Converter={StaticResource M2Converter}, ConverterParameter=HectaAcres, StringFormat=F2}" TextAlignment="Right" />

                                    <TextBlock Grid.Column="0" Grid.Row="6" Text="Total Perimeter (Ft)" />
                                    <TextBlock Grid.Column="2" Grid.Row="6" Text="{Binding TotalPolygonArea, Converter={StaticResource MtoFConverter}, StringFormat=F2}" TextAlignment="Right" />-->
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Name="tiPoints" Header="Points">
                <Border BorderBrush="Green" BorderThickness="3,0,0,0">
                    <ContentControl Content="{Binding PointEditorControl}"/>
                </Border>
            </TabItem>

            <TabItem Name="tiPolygons" Header="Polygons" PreviewKeyDown="CommandInterceptor">
                <Border BorderBrush="Green" BorderThickness="3,0,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ListBox Name="lbPolys" Grid.Column="0" Grid.Row="0" BorderThickness="0"
                                    ItemsSource="{Binding PolygonsLVC, Mode=OneWay}"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ItemContainerStyle="{StaticResource styleListBoxContainer}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding PolygonChangedCommand}"
                             CommandParameter="{Binding ElementName=lbPolys, Path=SelectedItem}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Text="{Binding Name}" FontSize="18"/>
                                        <TextBlock Grid.Row="1" Text="{Binding Description}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <ScrollViewer Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
                            <Grid Margin="10 5 5 5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.Resources>
                                    <Style TargetType="TextBox">
                                        <Setter Property="FontSize" Value="20"/>
                                        <Setter Property="IsEnabled" Value="False" />

                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=lbPolys, Path=SelectedItem, Converter={StaticResource NotNullConverter}}" Value="True">
                                                <Setter Property="IsEnabled" Value="True" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>

                                    <Style TargetType="GroupBox">
                                        <Setter Property="FontSize" Value="20"/>
                                        <Setter Property="Margin" Value="5,0,5,5"/>
                                    </Style>

                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="20"/>
                                    </Style>

                                </Grid.Resources>

                                <TextBlock Grid.Column="0" Grid.Row="0" Text="Name" />
                                <TextBox Grid.Column="0" Grid.Row="1" Text="{Binding PolygonName, UpdateSourceTrigger=PropertyChanged, Delay=500}"
                                         PreviewTextInput="TextHasRestrictedCharacters" IsUndoEnabled="False" Grid.ColumnSpan="2"/>

                                <TextBlock Grid.Column="0" Grid.Row="2" Text="Accuracy (Meters)*" />
                                <Grid Grid.Column="0" Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0"
                                     Name="txtPolyAcc"
                                     Text="{Binding PolygonAccuracy, UpdateSourceTrigger=PropertyChanged, Delay=750}"
                                     PreviewTextInput="TextIsDouble" IsUndoEnabled="False">
                                    </TextBox>
                                    <Button Grid.Column="1" Width="75" Command="{Binding PolygonUpdateAccCommand}" Content="Update"/>
                                    <Button Grid.Column="2" Width="100" Command="{Binding PolygonAccuracyLookupCommand}" Content="Acc Lookup"
                                            ToolTip="Lookup using NTDP Accuracy Matrix"/>
                                </Grid>

                                <Grid Grid.Column="0" Grid.Row="4" Grid.RowSpan="2" Margin="0 4 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="105"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Start Index" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Grid.Row="0" Margin="0,4,0,2"
                                         Text="{Binding PolygonPointStartIndex, UpdateSourceTrigger=PropertyChanged, Delay=500}"
                                         PreviewTextInput="TextIsUnsignedInteger" IsUndoEnabled="False"/>


                                    <TextBlock Grid.Column="0" Grid.Row="1" Text="Increment" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" Grid.Row="1" Margin="0,2,0,4"
                                         Text="{Binding PolygonIncrement, UpdateSourceTrigger=PropertyChanged, Delay=500}"
                                         PreviewTextInput="TextIsUnsignedInteger" IsUndoEnabled="False"/>
                                </Grid>

                                <!--<StackPanel Grid.Column="0" Grid.Row="6" Orientation="Horizontal" Margin="0 2 0 0">
                                    <TextBlock Text="Angle Point Method: "/>
                                    <TextBlock Text="{Binding AnglePointText}"
                                               TextDecorations="{Binding AnglePointTextDec}"
                                               ToolTip="{Binding AnglePointToolTip}"/>
                                </StackPanel>-->

                                <StackPanel Grid.Column="0" Grid.Row="7" Orientation="Horizontal" Margin="0 2 0 0 ">
                                    <TextBlock Text="Created On: "/>
                                    <TextBlock Text="{Binding CurrentPolygon.TimeCreated}"/>
                                </StackPanel>

                                <TextBlock Grid.Column="0" Grid.Row="8" Text="Description" />
                                <TextBox Grid.Column="0" Grid.Row="10" Grid.ColumnSpan="3" MinLines="3" MaxLines="5" Margin="0 0 5 0"
                                Text="{Binding PolygonDescription, UpdateSourceTrigger=PropertyChanged, Delay=500}" IsUndoEnabled="False"
                                         AcceptsReturn="True" TextWrapping="Wrap"/>

                                <GroupBox Header="Area" Grid.Column="2" Grid.Row="0" Grid.RowSpan="3">
                                    <Grid Margin="5,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="23*"/>
                                            <ColumnDefinition Width="110*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Text="Ac:" ToolTip="Acres"/>
                                        <TextBlock Grid.Column="1" Grid.Row="0" VerticalAlignment="Center"
                                                   Text="{Binding CurrentPolygon.AreaAcres, StringFormat=F4}" Grid.ColumnSpan="2"/>

                                        <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Text="Ha:" ToolTip="Hectares"/>
                                        <TextBlock Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"
                                                   Text="{Binding CurrentPolygon.AreaHectaAcres, StringFormat=F4}" Grid.ColumnSpan="2"/>
                                    </Grid>
                                </GroupBox>

                                <GroupBox Header="Polygon Perimeter" Grid.Column="2" Grid.Row="3" Grid.RowSpan="3">
                                    <Grid Margin="5,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Text="Ft:" ToolTip="Feet"/>
                                        <TextBlock Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" Text="{Binding CurrentPolygon.PerimeterFt, StringFormat=F3}"/>

                                        <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Text="M:" ToolTip="Meters"/>
                                        <TextBlock Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Text="{Binding CurrentPolygon.Perimeter, StringFormat=F3}"/>
                                    </Grid>
                                </GroupBox>

                                <GroupBox Header="Poly Line Length" Grid.Column="2" Grid.Row="6" Grid.RowSpan="3">
                                    <Grid Margin="5,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Text="Ft:" ToolTip="Feet"/>
                                        <TextBlock Grid.Column="1" Grid.Row="0" VerticalAlignment="Center"
                                                   Text="{Binding CurrentPolygon.PerimeterLineFt, StringFormat=F3}" Grid.ColumnSpan="2"/>

                                        <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Text="M:" ToolTip="Meters"/>
                                        <TextBlock Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"
                                                   Text="{Binding CurrentPolygon.PerimeterLine, StringFormat=F3}" Grid.ColumnSpan="2" Margin="0,1,0,0"/>
                                    </Grid>
                                </GroupBox>

                                <GroupBox Header="Polygon Area-Error Summary" Grid.Column="0" Grid.Row="11" Grid.ColumnSpan="3" Margin="-1 0 5 0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <GroupBox Header="GPS Contribution" Grid.Column="0" Grid.Row="0">
                                            <Grid Margin="5,0,5,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="5"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="5"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Text="Ac:"/>
                                                <TextBlock Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" Text="{Binding PolygonSummary.TotalGpsError, StringFormat=F4, Converter={StaticResource M2Converter}, ConverterParameter=Acres}"/>

                                                <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Text="Ha:"/>
                                                <TextBlock Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" Text="{Binding PolygonSummary.TotalGpsError, StringFormat=F4, Converter={StaticResource M2Converter}, ConverterParameter=HectaAcres}"/>

                                                <TextBlock Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" Text="Err Ratio**" ToolTip="Area-Error/Area to be less than 10%"/>
                                                <TextBlock Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" Text="{Binding PolygonSummary.GpsAreaError, StringFormat={}{0:F3}%}"/>
                                            </Grid>
                                        </GroupBox>

                                        <GroupBox Header="Traverse Contribution" Grid.Column="1" Grid.Row="0">
                                            <Grid Margin="5,0,5,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="5"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="5"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Text="Ac:" ToolTip="Acres"/>
                                                <TextBlock Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" Text="{Binding PolygonSummary.TotalTraverseError, StringFormat=F4, Converter={StaticResource M2Converter}, ConverterParameter=Acres}"/>

                                                <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Text="Ha:" ToolTip="Hectares"/>
                                                <TextBlock Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" Text="{Binding PolygonSummary.TotalTraverseError, StringFormat=F4, Converter={StaticResource M2Converter}, ConverterParameter=HectaAcres}"/>

                                                <TextBlock Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" Text="Error"/>
                                                <TextBlock Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" Text="{Binding PolygonSummary.TraverseAreaError, StringFormat={}{0:F3}%}"/>
                                            </Grid>
                                        </GroupBox>

                                        <GroupBox Header="Geometric Error Reduction" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                                            <Grid Margin="5,0,5,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="5"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="5"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="5"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Text="Ac:" ToolTip="Acres"/>
                                                <TextBlock Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" Text="{Binding PolygonSummary.GERResult.TotalError, StringFormat=F4, Converter={StaticResource M2Converter}, ConverterParameter=Acres}"/>

                                                <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Text="Ha:" ToolTip="Hectares"/>
                                                <TextBlock Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" Text="{Binding PolygonSummary.GERResult.TotalError, StringFormat=F4, Converter={StaticResource M2Converter}, ConverterParameter=HectaAcres}"/>

                                                <TextBlock Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" Text="Err Ratio**" ToolTip="Area-Error/Area to be less than 10%"/>
                                                <TextBlock Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" Text="{Binding PolygonSummary.GERResult.AreaError, StringFormat={}{0:F3}%}"/>

                                                <TextBlock Grid.Column="3" Grid.Row="0" Margin="40 0 0 0" VerticalAlignment="Center" Text="Long Legs"
                                                           ToolTip="Legs longer than 10x the average accuracy of the adjacent points"/>
                                                <TextBlock Grid.Column="5" Grid.Row="0" VerticalAlignment="Center"
                                                           Text="{Binding PolygonSummary.GERResult.LongLegsPercent, StringFormat={}{0:F2}%}"/>

                                                <TextBlock Grid.Column="3" Grid.Row="2" Margin="40 0 0 0" VerticalAlignment="Center" Text="Sharp Edges"
                                                           ToolTip="Edges of an angle greater than 45&#186;"/>
                                                <TextBlock Grid.Column="5" Grid.Row="2" VerticalAlignment="Center"
                                                           Text="{Binding PolygonSummary.GERResult.SharpEdgesPercent, StringFormat={}{0:F2}%}"/>

                                                <TextBlock Grid.Column="3" Grid.Row="4" Margin="40 0 0 0" VerticalAlignment="Center" Text="Reduction Of"
                                                           ToolTip="Reduction from Total GPS Contribution"/>
                                                <TextBlock Grid.Column="5" Grid.Row="4" VerticalAlignment="Center" Text="{Binding PolygonSummary.GERResult.TotalReduction, StringFormat={}{0:F3}%}"/>

                                            </Grid>
                                        </GroupBox>
                                        
                                        <Expander Header="Details" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2">
