                                Style="{StaticResource styleTabButtonStyle}" Command="{Binding OpenMapWindowCommand}" CommandParameter="{Binding ElementName=MapContainer}">

                            <Border Style="{StaticResource styleTabButtonBorderStyle}" Padding="2" Margin="0,0,0,-4">
                                <Image Source="{StaticResource ImgOpenInNew}" Width="15" Height="15" Stretch="Fill" Margin="0,0,0,-2" ToolTip="Open Map Window">
                                    <Image.LayoutTransform>
                                        <RotateTransform Angle="-90"/>
                                    </Image.LayoutTransform>
                                </Image>
                            </Border>
                        </Button>
                    </StackPanel>
                </TabItem.Header>

                <Border BorderBrush="Green" BorderThickness="3,0,0,0">
                    <Grid x:Name="MapContainer">
                        <!--<local:MapControl x:Name="MapControl" /> -->
                        <!--Manager="{Binding Manager, Mode=OneWay}"-->
                    </Grid>
                </Border>
            </TabItem>

            <TabItem Name="tiActivity" Header="Activity" Visibility="{Binding Settings.IsAdvancedMode, Converter={StaticResource BoolToVis}}">
                <Border BorderBrush="Green" BorderThickness="3,0,0,0">
                    <Grid Background="LightGray">
                        <ContentControl x:Name="uac" Content="{Binding UserActivityControl}"/>
                    </Grid>
                </Border>
            </TabItem>

        </TabControl>

        <Grid Grid.Row="0" Height="3" Background="{StaticResource scbPrimaryDark}" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
