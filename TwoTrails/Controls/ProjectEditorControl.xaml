                                <TextBlock Grid.Column="2" Grid.Row="8" Text="Datum" />
                                <ComboBox Grid.Column="2" Grid.Row="9" IsEnabled="False"
                                          SelectedItem="{Binding MetadataDatum, UpdateSourceTrigger=PropertyChanged, Delay=500}"
                                          ItemsSource="{fmsccm:EnumToItemsSource {x:Type fmsc:Datum}}"/>

                                <TextBlock Grid.Column="0" Grid.Row="10" Text="GPS Receiver" />
                                <ComboBox Grid.Column="0" Grid.Row="11" IsEditable="True"
                                          ItemsSource="{StaticResource arrGps}" Text="{Binding MetadataGpsReceiver, UpdateSourceTrigger=PropertyChanged, Delay=500}" />

                                <TextBlock Grid.Column="2" Grid.Row="10" Text="Range Finder" />
                                <ComboBox Grid.Column="2" Grid.Row="11" IsEditable="True" Text="{Binding MetadataRangeFinder, UpdateSourceTrigger=PropertyChanged, Delay=500}"
                                          ItemsSource="{StaticResource arrRangeFinder}"/>


                                <TextBlock Grid.Column="0" Grid.Row="12" Text="Compass" />
                                <ComboBox Grid.Column="0" Grid.Row="13" IsEditable="True" Text="{Binding MetadataCompass, UpdateSourceTrigger=PropertyChanged, Delay=500}"
                                          ItemsSource="{StaticResource arrCompass}"/>

                                <TextBlock Grid.Column="2" Grid.Row="12" Text="Crew" />
                                <TextBox Grid.Column="2" Grid.Row="13" Text="{Binding MetadataCrew, UpdateSourceTrigger=PropertyChanged}" IsUndoEnabled="False" />


                                <TextBlock Grid.Column="0" Grid.Row="14" Text="Comment" />
                                <TextBox Grid.Column="0" Grid.Row="15" Grid.ColumnSpan="3" MinLines="3" MaxLines="5"
                                        Text="{Binding MetadataComment, UpdateSourceTrigger=PropertyChanged, Delay=500}" IsUndoEnabled="False"
                                        AcceptsReturn="True" TextWrapping="Wrap"/>

                                <Button Grid.Column="2" Grid.Row="16" Width="100" Height="25" HorizontalAlignment="Right" Margin="0,5,0,5" Command="{Binding SetDefaultMetadataCommand}">Set as Default</Button>
                            </Grid>
                        </ScrollViewer>

                        <Grid Grid.Column="0" Grid.Row="1" Margin="2.5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Grid.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Height" Value="25"/>
                                    <Setter Property="Width" Value="75"/>
                                </Style>
                            </Grid.Resources>

                            <Button Grid.Column="0" Margin="0, 0, 5, 0" Content="Delete"
                                    Command="{Binding DeleteMetadataCommand}" CommandParameter="{Binding ElementName=lbMetadata, Path=SelectedItem}"
                                 IsEnabled="{Binding ElementName=lbMetadata, Path=SelectedItem, Converter={StaticResource NotNullConverter}}" />
                            <Button Grid.Column="3" Content="New" Command="{Binding NewMetadataCommand}" CommandParameter="{Binding ElementName=lbMetadata}" />
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>

            <TabItem Name="tiGroups" Header="Groups">
                <Border BorderBrush="Green" BorderThickness="3,0,0,0">
                    <Grid>
