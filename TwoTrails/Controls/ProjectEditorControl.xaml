                                        <DataTemplate>
                                            <TextBlock Text="{Binding Converter={StaticResource ResourceKey=enumDesc}}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>

                                <TextBlock Grid.Column="2" Grid.Row="6" Text="Elevation" />
                                <ComboBox Grid.Column="2" Grid.Row="7"
                                          SelectedItem="{Binding MetadataElevation, UpdateSourceTrigger=PropertyChanged}"
