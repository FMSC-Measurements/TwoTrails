                                <TextBlock Grid.Column="0" Grid.Row="4" Text="Declination Type" />
                                <ComboBox Grid.Column="0" Grid.Row="5"
                                          SelectedItem="{Binding MetadataDecType, UpdateSourceTrigger=PropertyChanged}"
